\titleformat{\chapter}% command
	[display]% shape
	{\normalfont\scshape\huge}% format
	{\vspace{-5cm}\color{darkblue}\flushright\chaptertitlename\hspace{1ex}\thechapter}% label
	{0.5ex}% sep
	{%
		\rule{\textwidth}{1pt}
		\vspace{1ex}
		\centering
	}% before-code
	[
		\vspace{-0.5ex}%
		\rule{\textwidth}{0.3pt}
	]% after-code


\titleformat{\subsection}% command
	[hang]%shape
	{\bf}%format
	{\thesubsection}%label
	{0.5em}%sep
	{}%before-code
	[]%after-code

\titleformat{\subsubsection}% command
	[hang]%shape
	{\bf}%format
	{\thesubsubsection}%label
